<div class="container">
  <h2><%= @group.name %></h2>
  <p><%= @group.description %></p>
  <%= render "posts/new", group: @group, post: @post %>
  
  <% @posts.each do |p| %>
    <div class="card my-3" >
      <div class="card-body">
        <h5 class="card-title">user_name(to do)</h5>
        <p class="card-text"><%= p.content %></p>
      </div>
    </div>
  <% end %>
  <%= link_to 'Back', groups_path, class: "btn btn-primary"%>
</div>
