<div class="container">
  <div class="rounded bg-primary p-5 mt-3">
    <h2><%= @group.name %></h2>
    <p><%= @group.description %></p>
  </div>
  <div class="card px-5 py-3 my-3">
    <%= render "posts/new", group: @group, post: @post %>
  </div>

  <h2>Recent posts</h2>
  <% @posts.each do |post| %>
    <%= render 'posts/post_card', post: post %>
  <% end %>
</div>
