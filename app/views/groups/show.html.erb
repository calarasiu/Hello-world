<div class="container">
  <div class="rounded bg-primary p-5 mt-3">
    <h2><%= @group.name %></h2>
    <p><%= @group.description %></p>
    <div class = "d-flex" >

      <div>
        <%= form_tag group_path(@group.id), method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Search in the group"
        %>
      </div>
      <div>
       <%= link_to "X",group_path(@group.id), class: "btn btn-primary " %>
      </div>
      <div>
        <%= submit_tag "Search", class: "btn btn-primary " %>
        <% end %>
      </div>
      
    </div>
  </div>
  <%result = Post.global_search("#{params[:query]}") %>  
  <% if result.empty?%>
    <div class="card px-5 py-3 my-3">
      <%= render "posts/new", group: @group, post: @post %>
    </div>
  
    <h2>Recent posts</h2>
    <% @posts.each do |post| %>
      <%= render 'posts/post_card', post: post %>
    <% end %>
  <%else %>
    <%result.each do |post| %>
      <%= render 'posts/post_card', post: post %>
    <% end %>
  <%end %>  

</div>
  