<div class = "container groups">
  <% @groups.each do |group| %>
    <div class="group-card p-4">
      <div class="group-info">
        <h5 class="card-title"><%=group.name %></h5>
        <p class="card-text"><%= group.description %></p>
        <div class="d-flex avatar-list">
          <% if group.users.length > 0 %>
            <% if group.users.first.photo.attached? %>
                <%= cl_image_tag group.users.first.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <% else %>
                <%= image_tag "avatar.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <% end %>
          <% group_users = group.users.first(5) %>
            <% group_users.drop(1).each do |user| %>
              <div class="avatars">
                <% if user.photo.attached? %>
                    <%= cl_image_tag user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                  <% else %>
                    <%= image_tag "avatar.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                  <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="d-flex justify-content-between w-100">
        <div>
          <%= link_to "Check out the group", group_path(group.id), class: "btn btn-primary" %>
        </div>
          <div class="btn btn-grey white ">
            <span><%= group.posts.count > 0 ? pluralize(group.posts.count, 'Post') : "0 Posts" %>
                <i class="fas fa-comments" aria-hidden="true" class="font-weight-bold"></i>

              </span>
          </div>
        </div>
    </div>
  <% end %>
</div>


