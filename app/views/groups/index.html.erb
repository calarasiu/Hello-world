<div class = "container groups">
  <% @groups.each do |group| %>
    <div class="group-card p-4">
      <div class="group-info">
        <h5 class="card-title"><%=group.name %></h5>
        <p class="card-text"><%= group.description %></p>
        <div class="d-flex">
          <% group.users.each do |user| %>
            <%if user.photo.attached?%>
              <%= cl_image_tag user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <%else %>
              <%= image_tag "avatar.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <%end %>
          <% end %>
        </div>
      </div>
      <div>
        <p><%= link_to "Check out the group", group_path(group.id), class: "btn btn-primary" %></p>
        <button type="button" class="btn btn-primary">
   <p class="post-count" ><%= group.posts.count > 0 ? pluralize(group.posts.count, 'Post') : "0 Posts" %><span class="badge badge-pill white"><i class="fas fa-comments fa-2x" aria-hidden="true"></i></span></p>
</button>
      </div>
  </div>
  <%end %>
</div>


