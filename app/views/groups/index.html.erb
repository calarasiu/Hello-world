

<div class = "container groups">
  <% @groups.each do |group| %>
    <div class="group-card p-4">
      <div class="group-info">
        <h5 class="card-title"><%=group.name %></h5>
        <p class="card-text"><%= group.description %></p>
        <div class="d-flex">
          <% group.users.each do |user| %>
            <%= image_tag 'avatar.jpg', class: 'avatar mr-n2' %>
          <% end %>
        </div>
      </div>
      <div class="flex-container">
      <p><%= link_to "Check out the group", group_path(group.id), class: "btn btn-primary" %></p>
      <p class="post-count" ><%= group.posts.count > 0 ? pluralize(group.posts.count, 'post') : "No Post" %></p>
    </div>
  </div>
  <%end %>
</div>


