<div class = "container groups">
  <% @groups.each do |group| %>
    <div class="group-card p-4">
      <div class="group-info">
        <h5 class="card-title"><%=group.name %></h5>
        <p class="card-text"><%= group.description %></p>
        <div class="d-flex">
          <% group.users.each do |user| %>
            <% if user.photo.attached? %>
              <span class="mb-2"><%= cl_image_tag user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %></span>
            <% else %>
              <span class="mb-2"><%= image_tag "avatar.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %></span>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="d-flex justify-content-between w-100">
        <div><%= link_to "Check out the group", group_path(group.id), class: "btn btn-primary" %></div>

         <div class="badge badge-pill white ">
          <span class="post-count mb-2 p-3"><%= group.posts.count > 0 ? pluralize(group.posts.count, 'Post') : "0 Posts" %>
              <i class="fas fa-comments" aria-hidden="true" class="font-weight-bold"></i>
            </span>
          </div>
      </div>
   </div>
  <% end %>
</div>


